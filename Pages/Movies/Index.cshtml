@page
@model WebApplication1.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Базы данных";
}

<h1>Базы данных</h1>

<p>
    <a asp-page="/Movies/Create">Создать новую запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
            ID
            </th>
            <th>
            Дата создания
            </th>
            <th>
            Название
            </th>
            <th>
            Стоимость
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
